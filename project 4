
DROP DATABASE IF EXISTS DML_UpdateDeleteDemo;
CREATE DATABASE DML_UpdateDeleteDemo;
USE DML_UpdateDeleteDemo;

CREATE TABLE Department (
    DeptID INT PRIMARY KEY,
    DeptName VARCHAR(50) NOT NULL
);

CREATE TABLE Employee (
    EmpID INT PRIMARY KEY,
    EmpName VARCHAR(50) NOT NULL,
    DeptID INT,
    FOREIGN KEY (DeptID) REFERENCES Department(DeptID)
);

INSERT INTO Department (DeptID, DeptName) VALUES (1, 'Computer Science');
INSERT INTO Department (DeptID, DeptName) VALUES (2, 'Mechanical');
INSERT INTO Department (DeptID, DeptName) VALUES (3, 'Electronics');
INSERT INTO Employee (EmpID, EmpName, DeptID) VALUES (101, 'Alice', 1);
INSERT INTO Employee (EmpID, EmpName, DeptID) VALUES (102, 'Bob', 1);
INSERT INTO Employee (EmpID, EmpName, DeptID) VALUES (103, 'Charlie', 2);
INSERT INTO Employee (EmpID, EmpName, DeptID) VALUES (104, 'David', 3);
INSERT INTO Employee (EmpID, EmpName, DeptID) VALUES (105, 'Eva', 2);

UPDATE Employee
SET EmpName = 'Alicia'
WHERE EmpID = 101;
UPDATE Employee
SET EmpName = 'Robert', DeptID = 3
WHERE EmpID = 102;
DELETE FROM Employee
WHERE EmpID = 105;

DELETE FROM Employee
WHERE DeptID = 2;

SELECT * FROM Department;

SELECT * FROM Employee;
